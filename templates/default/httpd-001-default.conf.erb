# Generated by Chef for <%= node['hostname'] %>.
# Local modifications will be overwritten.

ServerName <%= node['fqdn'] %>
DocumentRoot <%= node['apache']['docroot_dir'] %>
<Directory <%= node['apache']['docroot_dir'] %>>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    allow from all
</Directory>


#
# Empty VirtualHost
#
<VirtualHost *:80>
</VirtualHost>


LogLevel warn

#
# Override combined and common log format
#
LogFormat "%h %D %l %u \"%{%F %T}t\" \"%r\" %>s %D %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
LogFormat "%h %l %u \"%{%F %T}t\" \"%r\" %>s %D %b" common

LogFormat "time:%{%F %T}t\thost:%h\tident:%l\tuser:%u\treq:%r\tstatus:%>s\tsize:%b\treferer:\%{Referer}i\tua:%{User-Agent}i" combined_ltsv


#
# Default log
#
ErrorLog "|<%= node['apache2-wrapper']['cronolog'] %> <%= node['apache']['log_dir'] %>/error.log.%Y-%m-%d"
CustomLog "<%= node['apache']['log_dir'] %>/access.log.%Y-%m-%d" combined_ltsv
